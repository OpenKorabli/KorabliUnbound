(def element UICompendiumStylesInset ()
	(class $Fullsize)

	(scrollArea
		(class $Fullsize)
		(style (backgroundColor = "NO_COLOR"))

		(macro DEFAULT_VERTICAL_SCROLL_PARAMS
			_singleStep = "60px"
			_isContrastScrollBar = "true"
		)

		(content
			(style
				(hgap = "M")
				(flow = "horizontal")
				(width = 100%)
			)

			(element ReplacesSizeTemplates)
			(element UICompendiumNMFontsStyles)
			(element ServiceColorTemplates)
		)
	)
)

(def element ServiceColorTemplates ()
	(class $CompendiumBorderContainer)
	(style (width = 300px))

	(tf
		(class $TextDefaultBold24NM)
		(style
			(marginBottom = "SXS")
			(alpha = "TA")
		)
		(text = 'SERVICE COLORS')
	)

	(element HorizontalDividerTwoPx)

	(block
		(style
			(width = 100%)
			(marginTop = "SXS")
			(gap = "SXS")
		)

		(controller $Repeat renderer='ServiceColorTemplate'
			(count = "COMPENDIUM_SERVICE_COLORS_TEMPLATE.length")
			(args
				_label = "COMPENDIUM_SERVICE_COLORS_TEMPLATE[$index].label"
				_hex = "COMPENDIUM_SERVICE_COLORS_TEMPLATE[$index].hex"
				_color = "COMPENDIUM_SERVICE_COLORS_TEMPLATE[$index].value"
			)
		)
	)
)

(def constant SERVICE_COLOR_TEMPLATE_SCALE {
	SC.Ui_styles.BUTTON_STATE.DOWN: 1,
	SC.Ui_styles.BUTTON_STATE.OVER: 1.07,
	SC.Ui_styles.BUTTON_STATE.UP: 1
})

(def element ServiceColorTemplate (_label:str, _hex:str, _color:number)
	(scope
		(macro MOUSE_HANDLER_SCOPE)

		(var state:number = "	mouseDown		? SC.Ui_styles.BUTTON_STATE.DOWN :
								rollOver		? SC.Ui_styles.BUTTON_STATE.OVER
												: SC.Ui_styles.BUTTON_STATE.UP ")

		(var imageScale:number = "SERVICE_COLOR_TEMPLATE_SCALE[state]")

		(event evCopyToClipboard)
		(var copyToClipboard:str = "$debug.copyToClipboard('SC.Ui_styles.SERVICE_COLORS.' + _label)" init=false watch=false (event "evCopyToClipboard"))
	)
	(style
		(flow = "horizontal")
		(align = "middle")
	)

	(block
		(macro MOUSE_EVENTS_DISPATCHER)
		(style
			(pivotX = 50%)
			(pivotY = 50%)
			(width = 20px)
			(height = 20px)
			(bind backgroundColor "_color")
			(borderRadius = "XS")
		)
		(dispatch evCopyToClipboard dir="EventDirection.NONE" on='leftClick')

		(controller $Animation
			(bindcall play
				duration = 0.12
				to = "{ visualScaleY: imageScale, visualScaleX: imageScale }"
				action = "kill"
				easing = "Easing.quad_out"
				(bind trigger "imageScale")
			)
		)

		(controller $Tooltip
			(renderer = 'SimpleStatusTooltip')
			(args
				_text = 'IDS_COMPENDIUM_COPY_VALUES'
				_unifiedStatus = "SC.Ui_styles.UNIFIED_STATUS.MOUSE_LEFT"
			)
			(macro DEFAULT_TOOLTIP_BEHAVIOUR)
		)

		(block
			(class $CompendiumFxMessagePosition)

			(controller $FxInstance renderer='CompendiumFxMessage' lifetime=0.7
				(bindcall create (event "evCopyToClipboard"))
				(args
					_text = 'IDS_COMPENDIUM_COPY_VALUES_COMPLETE'
				)
			)
		)
	)

	(tf
		(class $TextDefaultNM)
		(style
			(width = 100px)
			(marginLeft = "M")
			(alpha = "TA")
		)
		(bind text "_hex")
	)

	(tf
		(class $TextDefaultNM)
		(style
			(marginLeft = "SXS")
			(alpha = "TA")
		)
		(bind text "_label")
	)
)

