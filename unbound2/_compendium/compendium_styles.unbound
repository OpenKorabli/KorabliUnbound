(def constant RESIZE_CONSTANT_TEMPLATE_ALPHA {
	SC.Ui_styles.BUTTON_STATE.DOWN: 0.7,
	SC.Ui_styles.BUTTON_STATE.OVER: 1.2,
	SC.Ui_styles.BUTTON_STATE.UP: 1
})

(def element ReplacesSizeTemplate (_size:number, _replaceTitle:str)
	(scope
		(macro MOUSE_HANDLER_SCOPE)
		(var state:number = "	mouseDown		? SC.Ui_styles.BUTTON_STATE.DOWN :
								rollOver		? SC.Ui_styles.BUTTON_STATE.OVER
												: SC.Ui_styles.BUTTON_STATE.UP ")

		(var templateAlpha:number = "RESIZE_CONSTANT_TEMPLATE_ALPHA[state]")

		(event evCopyToClipboard)
		(var copyToClipboard:str = "$debug.copyToClipboard(_replaceTitle)" init=false watch=false (event "evCopyToClipboard"))
	)

	(style
		(flow = "horizontal")
		(align = "bottom")
	)

	(block
		(block
			(style (backgroundColor = "NO_COLOR"))
			(macro MOUSE_EVENTS_DISPATCHER)
			(dispatch evCopyToClipboard dir="EventDirection.NONE" on='leftClick')

			(controller $Tooltip
				(renderer = 'SimpleStatusTooltip')
				(args
					_text = 'IDS_COMPENDIUM_COPY_VALUES'
					_unifiedStatus = "SC.Ui_styles.UNIFIED_STATUS.MOUSE_LEFT"
				)
				(macro DEFAULT_TOOLTIP_BEHAVIOUR)
			)

			(controller $Animation
				(bindcall play
					duration = 0.12
					to = "{ alpha: templateAlpha }"
					action = "kill"
					easing = "Easing.quad_out"
					(bind trigger "templateAlpha")
				)
			)


			(tf
				(class $TextDefault18NM)
				(style
					(width = 48px)
					(marginRight = "SXS")
					(alpha = "TA")
				)
				(bind text "_replaceTitle")
			)
		)

		(block
			(class $CompendiumFxMessagePosition)

			(controller $FxInstance renderer='CompendiumFxMessage' lifetime=0.7
				(bindcall create (event "evCopyToClipboard"))
				(args
					_text = 'IDS_COMPENDIUM_COPY_VALUES_COMPLETE'
				)
			)
		)
	)

	(tf
		(class $TextDefault18NM)
		(style
			(width = 40px)
			(textAlign = "right")
			(alpha = 0.9)
			(marginRight = "MS")
		)
		(bind text "_size")
	)

	(block
		(style
			(height = 1px)
			(alpha = 0.9)
			(backgroundColor = 0xFFFFFFFF)
			(bind width "_size")
		)
	)
)

(def element UICompendiumNMFontsStyles ()
	(scope
		(event evIsWithoutShadowChanged)
		(var isWithoutShadow:bool = false)
		(bind isWithoutShadow "!isWithoutShadow" init=false watch=false (event "evIsWithoutShadowChanged"))

		(var fontClassConfig:array = "isWithoutShadow ? COMPENDIUM_CLASSES_WITHOUT_SHADOW_TEMPLATE : COMPENDIUM_CLASSES_TEMPLATE")
	)
	(style (width = 100%))

	(block
		(class $FullsizeAbsolute)
		(style (backgroundColor = "SC.Ui_styles.SERVICE_COLORS.WHITE"))
		(isMask = true)	
	)

	(block
		(class $CompendiumBorderContainer)
		(style (width = 100%))

		(hblock
			(style (width = 100%))

			(block
				(style (width = 100%))
		
				(tf
					(class $TextDefaultBold24NM)
					(style
						(width = 100%)
						(marginBottom = "SXS")
						(alpha = "TA")
					)
					(text = 'BASE FONTS CLASSES')
				)
			)

			(element SwitchWithLeftLabel
				_label = 'Without shadow'
				_textClass = '$TextDefaultBoldNM'
				_state = "isWithoutShadow"
				_dispatchedEv = 'evIsWithoutShadowChanged'
			)
		)

		(element HorizontalDividerTwoPx)

		(block
			(style
				(paddingTop = "SXS")
				(gap = "SXS")
			)

			(controller $Repeat renderer='UICompendiumNMFontStyle'
				(bind count "fontClassConfig.length")
				(args
					_className	= "fontClassConfig[$index]"
				)
			)
		)
	)
)

