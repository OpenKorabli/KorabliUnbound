		(block
			(style (marginRight = "S"))

			(block
				(class $CompendiumColtrolsContainer)
				(style
					(minHeight = 100px)
					(vgap = "SXS")
				)

				(hblock
					(tf
						(class $TextDefault14NM)
						(style
							(marginRight = "S")
							(alpha = "TA")
						)
						(text = 'Input width:')
					)

					(element DefaultSlider
						_value = 0
