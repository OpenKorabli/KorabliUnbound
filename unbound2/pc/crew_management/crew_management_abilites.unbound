	(style
		(width = 100%)
		(paddingRight = "M")
		(paddingLeft = "M")
		(paddingBottom = "SXS")
		(paddingTop = "-SXS")
	)

	(element TooltipSystemHorizontalDivider)

	(element TooltipSystemStatusLine
