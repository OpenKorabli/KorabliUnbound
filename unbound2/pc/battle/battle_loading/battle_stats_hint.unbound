(def element RightPanelInfo (_headerText:str, _infoText:str, _isBattleStats:bool, _isVisible:bool)
	(name = 'RightPanelInfo')
	(style (width = 100%))

	(tf
		(class $TextDefaultBoldNM)
		(style
			(width = 100%)
			(alpha = "TA")
		)

		(bind text "toUpper(tr(_headerText))")
	)

	(tf
		(class $TextDefault17NM)
		(style
			(width = 100%)
			(marginTop = 15px)
			(leading = 1)
			(alpha = "TA")
		)

		(bind text "_infoText")
	)
)