			(bind class "isSelected ? '$DropdownSimpleOptionTextSelected': '$DropdownSimpleOptionText'")
			(style
				(width = 100%)
				(alpha = "TA")
				(elideMode = true)
				(wordWrap = false)
			)

			(bind text "itemText")
		)
	)
