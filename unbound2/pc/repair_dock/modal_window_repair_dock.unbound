(def macro HIDE_REPAIR_DOCK_UI_ANIMATION (_isEnabled:expression)
	(style (bind hitTest "!_isEnabled"))

	(controller $Animation
		(bindcall play
			to = "{alpha: 0}"
			easing = "Easing.quad_in"
			delay= 0.5
			duration = 0.4
			action = "killAll"
			(bind enabled "_isEnabled")
		)
		(bindcall play
			to = "{alpha: 1}"
			easing = "Easing.quad_in"
			delay=0.15
			duration = 0.25
			action = "killAll"
			(bind enabled "!_isEnabled")
		)
	)
)