						(bind alpha "initialCrosshairCaptionAlpha")
						(width = 100%)
						(textAlign = "center")
					)

					(text = 'IDS_DYNAMIC_CROSSHAIR_DESC')

					(controller $Animation
						(bindcall play
							duration = 0.1
							from	 = "{ alpha: 0, top: 10 }"
							to		 = "{ alpha: TA, top: 0 }"
							action="kill"
							(event "evShowDynCrosshairCaption")
