(def element EULAConfirmation ()
	(macro MODAL_WINDOW_INIT)
	(macro MODAL_WINDOW_BG)
	(class $Fullsize)

	(block
		(class $EyeLevelAligned)
		(style (width = 700px))

		(block
			(macro DEFAULT_MODAL_WINDOW_ANIMATION 1)
			(style
				(width = 100%)
				(marginBottom = "LS")
			)
			(element ModalWindowShortHeader
				_header = 'IDS_EULA'
			)
		)

		(block
			(macro DEFAULT_MODAL_WINDOW_ANIMATION 2)
			(style (width = 100%) (marginBottom = "LS"))
			(element EULAConfirmationContent)
		)

		(hblock
			(macro DEFAULT_MODAL_WINDOW_ANIMATION 4)
			(style
				(width = 100%)
				(align = "center")
				(gap = "MS")
			)

			(element DefaultButton
				_width = 140px
				_name = 'confirmEULA'
				_label = 'IDS_ACCEPT'
				_focusIndex = 1
				_methods = "[	{	type: 'inputMapping.onAction',
									name: 'confirmEULA',
									args: {} }]"
			)
			(element DefaultButton
				_width = 140px
				_name = 'rejectEULA'
				_label = 'IDS_REJECT'
				_focusIndex = 2
				_methods = "[	{	type: 'inputMapping.onAction',
									name: 'rejectEULA',
									args: {} }]"
			)
		)
	)
)

(def element EULAConfirmationContent ()
	(macro DEFAULT_MODAL_WINDOW_SCOPE_EVENTS)
	(scope
		(macro MOUSE_HANDLER_SCOPE)
	)
	(class $InfoBlockHorizontalIndent)

	(hblock
		(macro DEFAULT_MODAL_WINDOW_ANIMATION 2)
		(style
			(width = 100%)
			(marginBottom = "MS")
		)
		(tf
			(class $TextDefault20NM)
			(style
				(marginRight = 6px)
				(alpha = "TA")
			)
			(text = 'IDS_PLEASE_READ')
		)
		(block
			(name = 'requestEULA')

			(tf
				(class $TextDefault20NM)
				(style (alpha = "TA"))
				(text = 'IDS_EULA')
			)

			(block
				(style
					(position = "absolute")
					(bottom = "-XS")
					(width = 100%)
					(height = 1px)
					(backgroundColor = 0x80FFFFFF)
				)
			)

			(controller $Tooltip
				(renderer = 'SimpleStatusTooltip')
				(args
					_text = 'IDS_EULA_TOOLTIP'
				)
				(macro DEFAULT_TOOLTIP_BEHAVIOUR)
			)

			(macro MOUSE_HANDLER
				_methods = "[{ type: 'inputMapping.onAction', name: 'gotoUrlByIdent', args: {ident: SC.Ui_windows.GUI_URL.EULA}}]"
				_soundSet = "'default_button'"
			)
		)
		(tf
			(class $TextDefault20NM)
			(style (alpha = "TA"))
			(text = 'IDS_BEFORE_CONTINUE')
		)
	)
	(block
		(macro DEFAULT_MODAL_WINDOW_ANIMATION 3)
		(style (width = 100%))

		(tf
			(class $TextDefault20NM)
			(style
				(width = 100%)
				(marginBottom = "MS")
				(alpha = "TA")
			)
			(text = 'IDS_EULA_TEXT_1')
		)

		(tf
			(class $TextDefault20NM)
			(style
				(width = 100%)
				(alpha = "TA")
			)
			(text = 'IDS_EULA_TEXT_2')
		)
	)
)