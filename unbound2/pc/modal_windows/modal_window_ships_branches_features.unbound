(def element ShipFeaturesSideTabButton (_shipId:number, _isSelected:bool=false)
	(scope
		(var shipEntity:dhEntity = "getPrimaryEntity(CC.ship, _shipId)")
		(var shipComponent:dhComponent = "shipEntity.ship")
		(var levelRome:str = "shipComponent.levelRome ?: ''" (event "shipComponent.evUpdate"))
		(var levelIcon:str = "shipComponent.levelIcon ?: ''" (event "shipComponent.evCurrentSkinChanged"))

		(var isShowLevelIcon:bool = "levelIcon.length > 0")
		(var shipLevelName:str = "(isShowLevelIcon ? '' : levelRome) + ' ' + tr(shipComponent.nameIDS)")


		(struct activeTip =			PULL_ACTIVE_GUIDING_TIP())
		(struct checkedTipId =		SAFE_CHECK_ACTIVE_TIP_ID(_tipId = "activeTip.tipId"		_validValues = "[ SC.Context_guiding_tip.TIP_TYPE.SHIP_FEATURES_SHIP_TAB ]"))

		(var isGuidingTipVisible:bool = "checkedTipId.value && activeTip.targetId == _shipId")
	)

	(style (width = 100%))

	(element SideTabButton
		_label = "shipLevelName"
		_isSelected = "_isSelected"
		_dispatchedEv = 'evShipFeaturesSideTabButtonSelected'
		_dispatchParams = "{ _selectedIndex: $index, _group: SHIP_FEATURES_TAB_GROUP.SHIP }"
		_methods = "[	{ type: 'inputMapping.onAction',	name: 'viewShip',				args: { shipId: _shipId, state: SC.Common.SHIP_SELECTION_STATES.SHIP_FEATURES } },
						{ type:	'inputMapping.onAction',	name: 'deactivateTipChain',		args: { tip_chain_id: SC.Context_guiding_tip.TIP_CHAIN_ID.SHIP_FEATURES } }]"
		_namePostfix = "shipComponent.nameIDS"
	)

	(controller $Instance renderer='GuidingTipHub'
		(bind enabled "isGuidingTipVisible")
		(args
			_tipId =			"checkedTipId.value"
			_tipPositioning =	"TIP_POSITION_RIGHT"
			_offsetX =			"S"
			_pointerOffset =	-128
			_modalWindowName =	"SC.Ui_windows.MODAL.SHIP_BRANCHES_FEATURES"
		)
	)
)