(def element INFOTIP_SYSTEM_DEFAULT_CONTAINER (_isAutoSize:bool=false, _hasInsideOffset:bool=false)
	(style
		(bind width "_isAutoSize ? auto : 100%")
		(bind padding "_hasInsideOffset ? XS : 0px")
	)
)

(def element DefaultInfotipDragGripper (_type:number)
	(scope
		(struct mouseHandler = MOUSE_HANDLER())
	)
	(macro STRUCT_MOUSE_DISPATCHER _mouseHandler = "mouseHandler")

	(style
		(width = 100%)
		(height = 6px)
		(align = "center")
		(backgroundColor = "NO_COLOR")
	)
	(gripType = "_type")

	(block
		(style
			(width = 21px)
			(height = 4px)
			(marginTop = "XXS")
			(bind backgroundImage "	mouseHandler.mouseDown	? 'url:../service_kit/buttons/drag_gripper/down.png' :
									mouseHandler.rollOver	? 'url:../service_kit/buttons/drag_gripper/over.png'
															: 'url:../service_kit/buttons/drag_gripper/default.png'")
		)
	)
)