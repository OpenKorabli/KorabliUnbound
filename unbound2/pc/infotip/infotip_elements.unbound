(def element InfotipPinLeft()
	(scope (macro TOOLTIP_SYSTEM_DEFAULT_BACKGROUND_SCOPE))

	(style
		(position = "absolute")
		(bottom = 0px)
		(backgroundColor = 0x00000001)
	)

	(controller $Instance renderer = 'InfotipPin'
