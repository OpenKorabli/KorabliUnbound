	(width = 100%)
	(paddingTop = "-SXS")
	(paddingBottom = "M")
	(paddingLeft = "-SXS")
	(paddingRight = "-SXS")
)

(def css $ExteriorCategoryLabelMargin()
	(marginBottom = "M")
)

