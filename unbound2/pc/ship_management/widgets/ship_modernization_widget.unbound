(def element ModernizationsManagementWidget (_modernizationsCollection:dhCollection)
	(scope
		(macro MOUSE_HANDLER_SCOPE "'modernizationBlock_'")
		(macro PULL_SHIP_ID)
		(var ownShipEntity:dhEntity = "getPrimaryEntity(CC.ownShip, viewedShipId)")
		(var isOwned:bool = "ownShipEntity != null")

		(struct modernizationsFeature = FEATURES(_state = "SC.Common.ACCOUNT_FEATURE.MODERNIZATIONS"))
		(var isNew:bool = "modernizationsFeature.state == 'new'")

		(struct activeTip =			PULL_ACTIVE_GUIDING_TIP())
		(struct checkedTipId =		SAFE_CHECK_ACTIVE_TIP_ID(_tipId = "activeTip.tipId"		_validValues = "[ SC.Context_guiding_tip.TIP_TYPE.MODERNIZATION_BLOCKED_MAINTENANCE ]"))
	)

	(bindcall externalCall "isNew ? 'inputMapping.onAction' : ''" "['featureSeen',  {featureIndex: SC.Common.ACCOUNT_FEATURE.MODERNIZATIONS}]" watch=false (event "modernizationBlock_evRollOver"))

	(element DockWidgetBackground
		_roundSize = "SIZE.SMALL"
	)

	(block
		(class $ShipManagementSectionContainer)
		
		(block
			(hblock
				(style (width = 100%))

				(block
					(style (width =  100%))

					(tf
						(class $ShipManagementSectionHeader)
						(text = 'IDS_MODERNIZATIONS')
					)
				)

				(block
					(style (paddingTop = -3px))
					(controller $Instance renderer='InstallAllModernizations'
						(bind enabled "isOwned")
						(args
							_countModernizations = "_modernizationsCollection.length"
						)
					)
				)
			)

			(hblock
				(macro MOUSE_EVENTS_DISPATCHER "'modernizationBlock_'")
				(style
					(minWidth = 384px)
					(backgroundColor = "NO_COLOR")
					(hgap = "SHIP_MANAGEMENT_ITEM_HGAP")
				)

				(controller $Repeat renderer='ModernizationItem'
					(bind count "_modernizationsCollection.length")
					(args
						_equipmentSlotEntity = "_modernizationsCollection.getEntityAtIndex($index)"
					)
				)

				(block
					(class $FullsizeAbsolute)

					(block
						(macro DEFAULT_CONTROL_MARKER_ANIMATION "isNew")
						(style
							(position = "absolute")
							(top = "XXS")
							(left = 42px)
						)

						(element MarkerNew)
					)

					(controller $Instance renderer='GuidingTipHub'
						(bind enabled "checkedTipId.value")
						(args
							_tipId =			"checkedTipId.value"
							_tipPositioning =	"TIP_POSITION_RIGHT"
							_offsetX =			"S"
							_noPointer =		true
							_modalWindowName =	"SC.Ui_windows.WINDOWS.DOCK"
							_hasAssistant =		true
						)
					)
				)
			)
		)
	)
)

(def element InstallAllModernizations (_countModernizations:number)
	(scope
		(macro PULL_SHIP_ID)
		(var ownShipEntity:dhEntity = "getPrimaryEntity(CC.ownShip, viewedShipId)")
		(var ownShip:dhComponent = "ownShipEntity.ownShip")

		(var isShipReadyForBattle:bool = 	"ownShip.lock == SC.Common.OWN_SHIP_LOCK.DIVISION_IS_READY"	(event "ownShip.evUpdateLock"))
		(var isShipInBalancer:bool = 		"ownShip.lock == SC.Common.OWN_SHIP_LOCK.BALANCER" 			(event "ownShip.evUpdateLock"))
		(var isNeedRepair:bool = 			"ownShip.isNeedRepair" 										(event "ownShip.evUpdateDockState"))

		(var recommendedModernizationEntity:dhEntity = "getSingleEntity(CC.recommendedModernization)")
		(var recommendedModernization:dhComponent = "recommendedModernizationEntity.recommendedModernization")

		(var modsOnStorage:array = "recommendedModernization.modsOnStorage ?: []" (event "recommendedModernization.evUpdated"))
		(var modsToBuy:array = "recommendedModernization.modsToBuy ?: []" (event "recommendedModernization.evUpdated"))
		(var countOfInstalledModernization:number = "recommendedModernization.countOfInstalledModernization ?: 0" (event "recommendedModernization.evUpdated"))
		(var isAnyEmptyModernizationSlot:bool = "modsOnStorage.length || modsToBuy.length")
		(var isAASFKMAPsfm:bool = "countOfInstalledModernization < _countModernizations && !isAnyEmptyModernizationSlot")

		(var mouseInstruction:dict = "	isShipInBalancer				? {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.WARNING,
																			text: 'IDS_UNABLE_TO_SET_WHILE_IN_BALANCER'} :
										isShipReadyForBattle			? {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.ATTENTION,
																			text: 'IDS_SET_UNREADY_DIVISION_FIRST_TO_OPERATE_MODERNIZATION'} :
										isNeedRepair					? {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.ATTENTION,
																			text: 'IDS_SERVICE_SHIP_TO_OPERATE_MODERNIZATION'} :
										isAASFKMAPsfm					? {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.ATTENTION,
																			text: 'IDS_INSTALL_ALL_RECOMMENDED_BUT_NOT_ALL_MODERNIZATIONS_TOOLTIP'} :
										isAnyEmptyModernizationSlot		? {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.MOUSE_LEFT,
																			text: 'IDS_INSTALL_ALL_RECOMMENDED_MODERNIZATIONS_TOOLTIP'}
																		: {	unifiedStatus: SC.Ui_styles.UNIFIED_STATUS.ATTENTION,
																			text: 'IDS_INSTALL_ALL_RECOMMENDED_MODERNIZATIONS_NO_EMPTY_SLOT_TOOLTIP'}")

		(var isUnclickable:bool = "isShipReadyForBattle || isShipInBalancer || isNeedRepair || !isAnyEmptyModernizationSlot")
	)

	(controller $Tooltip
		(renderer = 'SimpleStatusTooltip')
		(args
			_text = "mouseInstruction.text"
			_unifiedStatus = "mouseInstruction.unifiedStatus"
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR)
	)

	(element DefaultButton
		_enabled = "!isUnclickable"
		_label =	'IDS_INSTALL_ALL_RECOMMENDED_MODERNIZATIONS'
		_width =	186px
		_size =		"SIZE.SMALL"
		_type =		"SC.Ui_styles.BUTTON_TYPE.SECONDARY"
		_methods = "[	{	type: isUnclickable ? '' : 'inputMapping.onRequest',
							name: 'installRecommendedModernizationsModal',
							args: { shipId: viewedShipId }}]"
	)
)

(def element ModernizationItem (_equipmentSlotEntity:dhEntity)
	(scope
		(var modernizationFeatureEntity:dhEntity = "getPrimaryEntity(CC.accountFeature, SC.Common.ACCOUNT_FEATURE.BIT_MASKS[SC.Common.ACCOUNT_FEATURE.MODERNIZATIONS])")

		(var equipmentSlot:dhComponent = "_equipmentSlotEntity.equipmentSlot")
		(var subCollectionKey:number = "equipmentSlot.subCollectionKey")
		(var bestItemTypeInSlot:number = "equipmentSlot.bestItemTypeInSlot" (event "equipmentSlot.evBestItemTypeInSlotChanged"))
		(var installedEntityId:number = "equipmentSlot.installedEntityId" (event "equipmentSlot.evInstalledEntityIdChanged"))

		(var modernizationEntity:dhEntity = "getEntity(installedEntityId)")
		(var modernization:dhComponent = "modernizationEntity.modernization")

		(var modId:number =	"modernization.modId")
		(var name:str =		"modernization.name")
		(var rarity:number = "modernization.rarity")
		(var numInStorage:number = "modernization.numInStorage ?: 0" (event "modernization.evNumInStorageChanged"))
		(var isRecommended:bool = "modernization.isRecommended" (event "modernization.evIsRecommendedChanged"))

		(var attributes:dhComponent = "modernizationEntity.attributes" (event "attributes.evChanged"))
		(var attributesNegative:array = "attributes.negative" (event "attributes.evChanged"))
		(var attributesNeutral:array = "attributes.neutral" (event "attributes.evChanged"))
		(var attributesPositive:array = "attributes.positive" (event "attributes.evChanged"))

		(macro PULL_SHIP_ID)
		(var ownShipEntity:dhEntity = "getPrimaryEntity(CC.ownShip, viewedShipId)")
		(var ownShipInfo:dhComponent = "ownShipEntity.ownShip")
		(var isOwned:bool = "ownShipEntity != null")

		(var isShipReadyForBattle:bool =	"ownShipInfo.lock == SC.Common.OWN_SHIP_LOCK.DIVISION_IS_READY" (event "ownShipInfo.evUpdateLock"))
		(var isShipInBalancer:bool =		"ownShipInfo.lock == SC.Common.OWN_SHIP_LOCK.BALANCER" 			(event "ownShipInfo.evUpdateLock"))

		(var isNeedRepair:bool = "ownShipInfo.isNeedRepair ?: false" (event "ownShipInfo.evUpdateDockState"))

		(var isClickableSlot:bool = "!isShipInBalancer && !isShipReadyForBattle && !isNeedRepair")
		(var hasInstalledItem:bool = "modernizationEntity != null") 
		(macro MOUSE_HANDLER_SCOPE)

		
		(struct sellCoef =		PULL_PRICE(_entityId = "'SELL_COEF'"			_actionId = "SC.Common.PRICE_ACTION.INFO"))
		(struct unmountPrice =	PULL_PRICE(_entityId = "'MODS_COST_Demontage'"	_actionId = "SC.Common.PRICE_ACTION.BUY"))
		(struct buyPrice =		PULL_PRICE(_entityId = "toString(modId)"		_actionId = "SC.Common.PRICE_ACTION.BUY"))
		

		(var isInfotipModernizationVisible:bool = false)
		(var isContextMenuAvailable:bool =	"isClickableSlot && hasInstalledItem")

		(var selectionState:number = "isClickableSlot		?	isInfotipModernizationVisible			? SC.Ui_styles.BUTTON_STATE.SELECTED :
																mouseDown								? SC.Ui_styles.BUTTON_STATE.DOWN :
																rollOver								? SC.Ui_styles.BUTTON_STATE.OVER
																										: SC.Ui_styles.BUTTON_STATE.UP
															:	SC.Ui_styles.BUTTON_STATE.DISABLED")

		(struct tooltipPosition = SHIP_MANAGEMENT_TOOLTIP_POSITION())


		(struct activeTip =			PULL_ACTIVE_GUIDING_TIP())
		(struct checkedTipId =		SAFE_CHECK_ACTIVE_TIP_ID(_tipId = "activeTip.tipId"		_validValues = "[	SC.Context_guiding_tip.TIP_TYPE.MODERNIZATION_AVAILABLE,
																												SC.Context_guiding_tip.TIP_TYPE.MODERNIZATION_AVAILABLE_REPEAT ]"))

		(var isGuidingTipVisible:bool = "checkedTipId.value && $index == activeTip.targetId && !isInfotipModernizationVisible")
	)

	(bind name "'ButtonModernizationSlot_' + $index")
	(style (backgroundColor = "NO_COLOR"))

	(macro MOUSE_EVENTS_DISPATCHER)
	(macro SOUND_HANDLER "isClickableSlot ? 'button_modernization' : ''")

	(controller $Tooltip
		(renderer = 'ModernizationEmptySlotTooltip')
		(bind enabled "!hasInstalledItem")
		(args
			_slotId = "subCollectionKey"
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR "0")
		(position = "border")
		(bind align "tooltipPosition.align")
	)

	(controller $Tooltip
		(renderer = 'ModernizationTooltip')
		(bind enabled "hasInstalledItem")
		(args
			_modernizationEntityId = "modernizationEntity.id"
			_isSlotTooltip = true
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR "0")
		(position = "border")
		(bind align "tooltipPosition.align")
	)

	(controller $Tooltip
		(renderer = 'SelectUnmountTypeInfotip')
		(bind enabled "isContextMenuAvailable")
		(args
			_sellCoef =				"sellCoef.info"
			_numInStorage =			1
			_isInstalled =			"hasInstalledItem"
			_modId =				"modId"
			_slotId =				"subCollectionKey"
			_shipId =				"viewedShipId"
			_rarity =				"rarity"
			_unmountPriceInfo =		"unmountPrice.info"
			_purchasePriceInfo =	"buyPrice.info"
		)
		(macro DEFAULT_MENU_BEHAVIOUR "1")
	)

	(controller $Tooltip
		(renderer = 'ModernizationSlotInfotip')
		(bind enabled "isClickableSlot")
		(args
			_slotId = "subCollectionKey"
		)

		(macro VERTICAL_INFOTIP_BEHAVIOUR "1")
		(align = "center|top")

		(bind isInfotipModernizationVisible "true" init=false on='evStartShow')
		(bind isInfotipModernizationVisible "false" init=false on='evHide')
	)

	(block
		(style
			(width = 64px)
			(height = 64px)
			(bind backgroundImage "!hasInstalledItem ? 'url:../service_kit/frames/64px_add_item.png' : ''")
			(backgroundSize = "cover")
			(padding = "XXS")
		)

		(controller $Instance renderer='ModernizationItemView'
			(bind enabled "hasInstalledItem")
			(args
				_name =				"name"
				_isRecommended =	"isRecommended"
			)
		)

		(controller $Instance renderer='GuidingTipHub'
			(bind enabled "isGuidingTipVisible")
			(args
				_tipId =			"checkedTipId.value"
				_tipPositioning =	"TIP_POSITION_RIGHT"
				_hasFinishButton =	"hasInstalledItem"
				_offsetX =			"S"
				_pointerOffset =	-42
				_modalWindowName =	"SC.Ui_windows.WINDOWS.DOCK"
				_hasAssistant =		true
			)
		)
	)

	(block
		(style (paddingTop = 5px))

		(element SelectionStatePanel
			_state = "selectionState"
		)
	)
)

