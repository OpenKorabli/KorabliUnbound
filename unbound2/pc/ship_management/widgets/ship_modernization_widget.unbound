(def element ModernizationSlotInfotipItem (_modernizationEntity:dhEntity)
	(scope
		(macro PULL_SHIP_ID)
		(var ownShipEntity:dhEntity = "getPrimaryEntity(CC.ownShip, viewedShipId)")
		(var ownShipInfo:dhComponent = "ownShipEntity.ownShip")
		(var isOwned:bool = "ownShipInfo != null")

		(var isShipInBalancer:bool =		"ownShipInfo.lock == SC.Common.OWN_SHIP_LOCK.BALANCER" 			(event "ownShipInfo.evUpdateLock"))
		(var isShipReadyForBattle:bool = 	"ownShipInfo.lock == SC.Common.OWN_SHIP_LOCK.DIVISION_IS_READY"	(event "ownShipInfo.evUpdateLock"))
		
		(var isShipLocked:bool = "isShipInBalancer || isShipReadyForBattle")

		(var modernization:dhComponent = "_modernizationEntity.modernization")
		(var attributes:dhComponent = "_modernizationEntity.attributes")
	
		(var name:str =			"modernization.name		?: ''")
		(var modId:number =		"modernization.modId	?: 0")
		(var slotId:number =	"modernization.slotId	?: 0")

		(var isRecommended:bool =	"modernization.isRecommended"	(event "modernization.evIsRecommendedChanged"))
		(var isInstalled:bool =		"modernization.isInstalled"		(event "modernization.evIsInstalledChanged"))

		(var numInStorage:number = "modernization.numInStorage ?: 0" (event "modernization.evNumInStorageChanged"))
		(var rarity:number = "modernization.rarity")

		(var attributesNegative:array =	"attributes.negative	?: []")
		(var attributesNeutral:array =	"attributes.neutral		?: []")
		(var attributesPositive:array =	"attributes.positive	?: []")

		(struct unmountPrice =	PULL_PRICE(_entityId = "'MODS_COST_Demontage'"	_actionId = "SC.Common.PRICE_ACTION.BUY"))
		(struct buyPrice =		PULL_PRICE(_entityId = "toString(modId)"		_actionId = "SC.Common.PRICE_ACTION.BUY"))
		(struct sellCoef =		PULL_PRICE(_entityId = "'SELL_COEF'"			_actionId = "SC.Common.PRICE_ACTION.INFO"))

		(var unmountCost:number = "unmountPrice.info.finalPrice")
		(var isCommonModernization:bool = "rarity == SC.Common.UNIFIED_ITEM_RARITY.COMMON")
		(var isShipAvailable:bool = "!isShipLocked && isOwned")
		(var isBuyMetashopItemAvailable:bool = "!isCommonModernization && !numInStorage && !isInstalled")

		(var accountResource:dhComponent = "getSingleComponent(CC.accountResource)")
		(var accountGold:number =		"accountResource.gold		?: 0" (event "accountResource.evChangedGold"))
		(var accountCredits:number =	"accountResource.credits	?: 0" (event "accountResource.evChangedCredit"))
	
		(var curCurrencyResource:number = "unmountPrice.info.currency == SC.Common.CURRENCIES.GOLD	? accountGold
																									: accountCredits")

		(macro MOUSE_HANDLER_SCOPE)

		(var infotipItemBGState:number = "	!isOwned		? SC.Ui_styles.BUTTON_STATE.DISABLED :
											mouseDown		? SC.Ui_styles.BUTTON_STATE.DOWN :
											rollOver		? SC.Ui_styles.BUTTON_STATE.OVER :
											isInstalled		? SC.Ui_styles.BUTTON_STATE.SELECTED
															: SC.Ui_styles.BUTTON_STATE.UP")
	)
	(style (width = 100%))
	(bind name "name")

	(block
		(style
			(width = 100%)
			(height = 88px)
			(backgroundColor = "NO_COLOR")
		)

		(controller $Tooltip
			(renderer = 'ModernizationTooltip')
			(args
				_modernizationEntityId =  "_modernizationEntity.id"
			)
			(macro DEFAULT_TOOLTIP_BEHAVIOUR "0")
		)

		(controller $Tooltip
			(bind enabled "!isShipLocked")
			(renderer = 'SelectUnmountTypeInfotip')
			(args
				_sellCoef =  "sellCoef.info"
				_numInStorage = "numInStorage"
				_isInstalled = "isInstalled"
				_modId = "modId"
				_slotId = "slotId"
				_shipId = "viewedShipId"
				_rarity =  "rarity"
				_unmountPriceInfo =  "unmountPrice.info"
				_purchasePriceInfo =  "buyPrice.info"
			)
			(macro DEFAULT_MENU_BEHAVIOUR "1")
		)
		(bindcall externalCall "isShipAvailable ? 'inputMapping.onAction' : ''" "['ServerUIDataUSS.setModernizationSeen', { modId: modId }]" watch=false on='rollOver')

		(element MenuItemBackground
			_state = "infotipItemBGState"
		)

		(macro MOUSE_HANDLER
			_enabled = "isShipAvailable"
			_soundSet =	"'button_modernization_Item'"
			_methods =	"[	{
								type:	isBuyMetashopItemAvailable ? 'inputMapping.onRequest' : '',
								name:	'showMetashopItemWindow',
								args:	{ itemId: modId }
							},
							{
								type:	!isBuyMetashopItemAvailable && !isInstalled ? 'inputMapping.onRequest' : '',
								name:	'showModernizationsPurchaseAndInstallWindow',
								args:	{ modId:modId, slotId:slotId }
							},
							{
								type:	isInstalled && isShipAvailable ? 'inputMapping.onRequest' : '',
								name:	'showModernizationsManagementWindow',
								args:	{ itemToUnmount: modId, shipId: viewedShipId, slotId: slotId }
							}]"
		)

		(hblock
			(class $FullsizeAbsolute)
			(style
				(align = "middle")
				(paddingTop = "S")
				(paddingBottom = "S")
				(paddingLeft = "SXS")
				(paddingRight = "SXS")
				(hitTest = false)
			)

			(block
				(style
					(hitTest = false)
					(align = "middle")
					(width = 70px)
					(height = 100%)
				)

				(element ModernizationItemView
					_name = "name"
					_isRecommended = "isRecommended"
				)
			)

			
			(block
				(style (width = 170px))

				(tf
					(class $TextDefaultBoldNM)
					(style
						(width = 100%)
						(leading = -2)
						(alpha = "TA")
					)

					(bind text "'IDS_TITLE_' + toUpper(name)")
				)

				(hblock
					(bind name "'bought_' + name")
					(bind visible "numInStorage > 0 && !isInstalled")
					(style (marginTop = "SXS"))

					(tf
						(class $TextDefaultNM)
						(style (alpha = "TC"))
						(bind text "tr('IDS_IN_WAREHOUSE') + ' ' + formatSeparator(numInStorage)")
					)
				)
			)

			
			(block
				(style
					(position = "absolute")
					(align = "middle")
					(right = 0px)
					(height = 100%)
				)

				(block
					(bind visible "numInStorage == 0 && !isCommonModernization && !isInstalled")
					(style
						(width = 19px)
						(height = 19px)
						(right = 0)
						(backgroundImage = 'url:../service_kit/icons/icon_armory.png'))
				)

				(block
					(controller $Instance renderer='PriceTag'
						(bind enabled "!isInstalled && numInStorage == 0 && isCommonModernization")
						(args
							_priceInfo =		"buyPrice.info"
							_showDiscountTag =	true
						)
					)
				)

				(block
					(controller $Instance renderer='CloseButton'
						(bind enabled "isInstalled && rollOver && !isShipLocked")
						(args
							_name = 'ButtonUnmount'
							_isDisabled = true
						)
					)
				)

				(block
					(bind name "'installed_' + name")
					(bind visible "isInstalled && (!rollOver || isShipLocked)")
					(style
						(marginRight = "-XXS")
						(width = 19px)
						(height = 19px)
						(backgroundSize = "cover")
						(backgroundImage = 'url:../service_kit/unified_status_icons/icon_check.png')
					)
				)
			)
		)
	)
)

(def element SelectUnmountTypeInfotip (_sellCoef:dict, _numInStorage:number, _isInstalled:bool, _modId:number, _slotId:number, _shipId:number, _rarity:number, _unmountPriceInfo:dict, _purchasePriceInfo:dict)
	(scope
		(macro MOUSE_HANDLER_SCOPE)
		(var isArmoryItemStatus:bool = "_rarity != SC.Common.UNIFIED_ITEM_RARITY.COMMON && !_numInStorage")
	)
	(class $ContextMenuDimensions)
	(macro MOUSE_EVENTS_DISPATCHER)
	(macro TOOLTIP_SYSTEM_DEFAULT_BACKGROUND _isInfotip="true")

	(element INFOTIP_SYSTEM_DEFAULT_CONTAINER _hasInsideOffset = true
		(block
			(bind visible "_isInstalled")
			(style (width = 100%))

			(block
				(style (width = 100%))

				(element ContextMenuItem
					_title = 'IDS_UNMOUNT'
					_name = 'RemoveInSelectUnmountTypeInfotip'
					_methods = "[{
									type:	'inputMapping.onRequest',
									name:	'showModernizationsManagementWindow',
									args:	{	itemToUnmount:	_modId,
												shipId:			_shipId,
												mountFlag:		0,
												unmountFlag:	SC.Common.LOBBY_CONSTANTS.MODERNIZATION_UNSET,
												slotId:			_slotId }
								}]"
				)
				(block
					(style (position = "absolute") (height = 100%) (align = "middle") (right = "S") (hitTest = false))
					(element PriceTag
						_priceInfo = "_unmountPriceInfo"
						_showDiscountTag = true
					)
				)
			)

			(block
				(style (width = 100%))

				(element ContextMenuItem
					_title = 'IDS_SELL'
					_name = 'DestroyInSelectUnmountTypeInfotip'
					_methods = "[{
									type:	'inputMapping.onRequest',
									name:	'showModernizationsManagementWindow',
									args:	{	itemToUnmount:	_modId,
												shipId:			_shipId,
												mountFlag:		0,
												unmountFlag:	SC.Common.LOBBY_CONSTANTS.MODERNIZATION_SELL,
												slotId:			_slotId }
								}]"
				)
				(block
					(style (position = "absolute") (height = 100%) (align = "middle") (right = "S") (hitTest = false))
					(element PriceTag
						_priceInfo = "{finalPrice: (_purchasePriceInfo.finalPrice) * (_sellCoef.finalPrice), currency: SC.Common.CURRENCIES.CREDITS}"
						_showDiscountTag = true
					)
				)
			)
		)

		(block
			(bind visible "!_isInstalled && !isArmoryItemStatus")
			(style (width = 100%))

			(element ContextMenuItem
				_title = 'IDS_INSTALL'
				_name = 'InstallInSelectUnmountTypeInfotip'
				_methods = "[{
								type:	'inputMapping.onRequest',
								name:	'showModernizationsPurchaseAndInstallWindow',
								args:	{	slotId: _slotId,
											modId: _modId }
							}]"
			)
			(block
				(bind visible "_numInStorage == 0 && !isArmoryItemStatus")
				(style (position = "absolute") (height = 100%) (align = "middle") (right = "S") (hitTest = false))
				(element PriceTag
					_priceInfo = "_purchasePriceInfo"
					_showDiscountTag = true
				)
			)
		)

		(block
			(bind visible "!_isInstalled && isArmoryItemStatus")
			(style (width = 100%))
			(element ContextMenuItem
				_title = 'IDS_BUY_IN_ARMORY'
				_name = 'BuyInArmoryUnmountTypeInfotip'
				_methods = "[{
								type:	'inputMapping.onRequest',
								name:	'showMetashopItemWindow',
								args:	{ itemId: _modId }
							}]"
			)
		)
	)
)