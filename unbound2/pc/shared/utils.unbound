		(style (alpha = "0.2"))
	)
)

(def element DeclareBlurLayer ()
	(scope
		(macro GET_PREF 'isBlurOptionEnabled' "'graphics.GUI.blur'")
	)
	(style (position = "absolute"))

	(controller $Instance layout=true
		(bind enabled "isBlurOptionEnabled")
		(exprs
			(mc transparentPixel
				(rendererString = blurLayer)
			)
		)
	)
)


