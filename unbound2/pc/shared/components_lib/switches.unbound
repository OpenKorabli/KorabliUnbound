(def element SwitchView (_state:bool=false)
	(scope
		(var greenPanelAlpha:number = "_state ? 1 : 0")
		(var offsetX:number = "_state ? 16 : 0")
	)
	(style
		(width = 36px)
		(height = 20px)
	)

	(block
		(class $FullsizeAbsolute)
		(style (padding = 3px))

		(block
			(class $Fullsize)
			(style
				(backgroundColor = "SC.Ui_styles.SERVICE_COLORS.BLACK")
				(alpha = 0.6)
				(borderRadius = "XXS")
			)
		)
	)

	(block
		(class $FullsizeAbsolute)
		(style (padding = "XS"))

		(block
			(style
				(width = 100%)
				(height = 12px)
				(position = "absolute")
				(backgroundColor = "SC.Ui_styles.SERVICE_COLORS.INNER_PANEL")
				(borderRadius = "XXS")
			)
		)

		(block
			(style
				(width = 14px)
				(height = 12px)
				(backgroundColor = "SC.Ui_styles.SERVICE_COLORS.ACCENT_BLUE")
				(borderRadiusTopLeft = "XXS")
				(borderRadiusBottomLeft = "XXS")
				(alpha = "greenPanelAlpha")
			)

			(controller $Animation
				(bindcall play
					duration = 0.15
					to = "{ alpha: greenPanelAlpha }"
					action = "kill"
					(bind trigger "greenPanelAlpha")
				)
			)
		)
	)

	(block
		(style
			(position = "absolute")
			(left = "offsetX")
			(width = 20px)
			(height = 20px)
			(backgroundImage = 'url:../service_kit/switch/switch_btn.png')
		)

		(controller $Animation
			(bindcall play
				duration = 0.15
				to = "{ left: offsetX }"
				action = "kill"
				(bind trigger "offsetX")
			)
		)
	)
)