	)

	(tf
		(bind visible "_isModalPreBattleNotReady")
		(class $TextDefaultBoldNM)
		(style
			(position = "absolute")
			(top = "S")
			(right = "SXS")
			(bind alpha "isIgnored ? TC : TA")
			(bind textColor "	isReady 	? SC.Ui_styles.SERVICE_COLORS.GREEN : 
								isIgnored	? SC.Ui_styles.SERVICE_COLORS.WHITE
											: SC.Ui_styles.SERVICE_COLORS.ORANGE")
		)
		
		(bind text "toUpper(tr(playerState))")
	)
)

