		(args
			_text = "restrictionsIds"
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR)
	)

	(hblock
		(style (marginRight = "XXS"))

		(controller $Repeat renderer='ShipClassIconWrapper'
