(def element DivisionHeaderLock ()
	(scope
		(var divisionDataComponent:dhComponent = "getSingleComponent(CC.division)")
		(var isPreBattleLocked:bool = "divisionDataComponent.locked" (event "divisionDataComponent.evLockedChanged"))
		(var preBattlePlayerSimpleComponent:dhComponent = "getSingleEntity(CC.accountSelf).preBattlePlayerSimple")

		(var isSelfPlayerCommander:bool = 	"preBattlePlayerSimpleComponent.isCommander" 	(event "preBattlePlayerSimpleComponent.evIsCommanderChanged"))
		(var selfPreBattleId:number = 		"preBattlePlayerSimpleComponent.preBattleId" 	(event "preBattlePlayerSimpleComponent.evPreBattleIdChanged"))

		(var preBattleComponent:dhComponent = "getPrimaryComponent(CC.preBattle, selfPreBattleId)")
		(var ownerId:number = "preBattleComponent.ownerId" (event "preBattleComponent.evOwnerIdChanged"))

		(var preBattleOwnerPlayerEntity:dhEntity = "getPrimaryEntity(CC.preBattlePlayerSimple, ownerId)")

		(var tooltipData:dict = "{ 	unifiedStatus: isSelfPlayerCommander ? SC.Ui_styles.UNIFIED_STATUS.MOUSE_LEFT : SC.Ui_styles.UNIFIED_STATUS.WARNING,
									descriptionText: isPreBattleLocked ? 'IDS_CLAN_LOCKED_DIVISION' : 'IDS_CLAN_UNLOCKED_DIVISION',
									statusText:	isSelfPlayerCommander && isPreBattleLocked	? 'IDS_CLAN_MOUSE_INSTRUCTION_UNLOCK_DIVISION' :
												isSelfPlayerCommander						? 'IDS_CLAN_MOUSE_INSTRUCTION_LOCK_DIVISION'
																							: 'IDS_PVE_DIVISION_MATCHMAKER_CONFIG_AVAILABLE_FOR_COMMANDER'}")
	)
	(bind visible "preBattleOwnerPlayerEntity.hasComponent(CC.clanman)")

	(controller $Instance renderer='ImageButton'
		(bind enabled "preBattleOwnerPlayerEntity.clanman")
		(args
			_width = 32px
			_height = 32px
			_backgroundImage = "isPreBattleLocked 	? 	'url:../service_kit/divisions_icons/button_lock_select.png'
													:	'url:../service_kit/divisions_icons/button_lock_not_select.png'"
			_enabled = "isSelfPlayerCommander"
			_methods = "[{	type:	isSelfPlayerCommander ? 'inputMapping.onAction' : '',
							name:	isPreBattleLocked ? 'unlockDivision' : 'lockDivision',
							args:	{ id: selfPreBattleId } }]"
		)
	)

	(controller $Tooltip
		(bind enabled "preBattleOwnerPlayerEntity.clanman")
		(renderer='DescriptionStatusLineTooltip')
		(args
			_unifiedStatus = 	"tooltipData.unifiedStatus"
			_descriptionText = 	"tooltipData.descriptionText"
			_statusText = 		"tooltipData.statusText"
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR)
	)
)