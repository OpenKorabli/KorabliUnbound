(def constant REWARD_VIEW_SIZE "{
	SC.Ui_styles.SIZE.SMALL:	80px,
	SC.Ui_styles.SIZE.MEDIUM:	120px,
	SC.Ui_styles.SIZE.LARGE:	200px
}")


(def element RewardStylizedView (_imagePath:str, _size:number = "SC.Ui_styles.SIZE.MEDIUM")
	(style
		(hitTest = false)
		(bind width "REWARD_VIEW_SIZE[_size]")
		(bind height "REWARD_VIEW_SIZE[_size]")
		(bind backgroundImage "_imagePath")
		(backgroundSize = "fill")
	)
)

(def element UnsupportedRewardStylizedView (_size:number = "SC.Ui_styles.SIZE.MEDIUM")
	(style
		(hitTest = false)
		(bind width "REWARD_VIEW_SIZE[_size]")
		(bind height "REWARD_VIEW_SIZE[_size]")
		(backgroundColor = 0x20ffffff)
		(align = "center|middle")
	)

	(tf
		(bind class "_size == SC.Ui_styles.SIZE.MEDIUM ? '$TextDefaultBoldNM' : '$TextDefaultBold20NM'")
		(style
			(width = 100%)
			(alpha = "TC")
			(textAlign = "center")
			(textColor = "SC.Ui_styles.SERVICE_COLORS.ORANGE")
		)
		(text = 'UNSUPPORTED REWARD')
	)
)

(def element CamouflageRewardWithBackView (_imagePath:str, _data:dict=null, _size:number = "SC.Ui_styles.SIZE.MEDIUM")
	(scope
		(var selectedDefaultReward:str = "_data.rewardSubtype in RENDER_REWARD_EXTERIOR_ITEMS	? RENDER_REWARD_EXTERIOR_ITEMS[_data.rewardSubtype].rewardDefaultView
																								: ''")
		(var isMedium:bool = "_size == SC.Ui_styles.SIZE.MEDIUM")
	)
	(style
		(hitTest = false)
		(bind width "REWARD_VIEW_SIZE[_size]")
		(bind height "REWARD_VIEW_SIZE[_size]")
	)
	(block
		(class $FullsizeAbsolute)
		(style
			(bind backgroundImage "_imagePath")
			(backgroundSize = "fill")
		)
	)

	(block
		(style
			(position = "absolute")
			(bind bottom "isMedium ? 30px : LM")
			(bind right "isMedium ? 30px : LS")
		)

		(controller $Instance
			(bind enabled "selectedDefaultReward")
			(bind renderer "selectedDefaultReward")
			(args
				_camouflageId =		"_data.id"
				_camoName =			"_data.exteriorName"
				_isReward =			true
				_amount =			"_data.amount"
				_isAmountVisible =	false
				_useRepaintedIcon =	"_data.useRepaintedIcon"
				_fakeColorScheme =	"_data.fakeColorScheme"
				_exteriorType =		"_data.exteriorType"
				_peculiarity =		"_data.peculiarity"
				_isUnlinkedMSkin =	"_data.isUnlinkedMSkin"
			)
		)
	)

	(block
		(class $FullsizeAbsolute)
		(style
			(bind backgroundImage "isMedium ? 'url:../reward_icons/medium/camo_overlay.png' : 'url:../reward_icons/big/camo_overlay.png'")
			(backgroundSize = "fill")
		)
	)
)

