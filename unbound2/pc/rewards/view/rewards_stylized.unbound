(def element RewardCrewWithBackView (_imagePath:str, _data:dict=null, _size:number = "SC.Ui_styles.SIZE.MEDIUM")
	(scope
		(var isMedium:bool = "_size == SC.Ui_styles.SIZE.MEDIUM")
		(var sizeCrew:number = "	isMedium	? SC.Ui_styles.SIZE.SMALL
												: SC.Ui_styles.SIZE.MEDIUM")
	)
	(style
		(hitTest = false)
		(bind width "REWARD_VIEW_SIZE[_size]")
		(bind height "REWARD_VIEW_SIZE[_size]")
	)
	(block
		(class $FullsizeAbsolute)
		(style
			(bind backgroundImage "_imagePath")
			(backgroundSize = "fill")
		)
	)

	(block
		(class $FullsizeAbsolute)
		(style
			(bind top "isMedium ? 22px : 43px")
			(bind left "isMedium ? 18px : 43px")
		)

		(element CrewStereotype
			_crewHistoryId = "_data.crewHistoryId"
			_showRentIcon = true
			_size = "sizeCrew"
		)
	)
	(block
		(class $FullsizeAbsolute)
		(style
			(bind backgroundImage "isMedium ? 'url:../reward_icons/medium/crew_overlay.png' : 'url:../reward_icons/big/crew_overlay.png'")
			(backgroundSize = "fill")
		)
	)
)

(def element RewardShipComponentView (_imagePath:str, _data:dict=null, _size:number = "SC.Ui_styles.SIZE.SMALL")
	(scope
		(var iSmall:bool = "_size == SC.Ui_styles.SIZE.SMALL")
		(var isMedium:bool = "_size == SC.Ui_styles.SIZE.MEDIUM")
		(var size:dict = "	iSmall		? {w: 230px, h: 160px} :
							isMedium	? {w: 300px, h: 150px}
										: {w: 476px, h: 355px}")
		(var sizeShip:dict = "	iSmall		? {w: 230px, h: 100px} :
								isMedium	? {w: 310px, h: 118px}
											: {w: 426px, h: 202px}")
	)
	(style
		(hitTest = false)
		(bind width "size.w")
		(bind height "size.h")
	)

	(block
		(class $FullsizeAbsolute)
		(style
			(bind backgroundImage "isMedium ? 'url:../reward_icons/medium/bg_shipComponent.png' : 'url:../reward_icons/big/bg_shipComponent.png'")
			(backgroundSize = "fill")
		)
	)

	(block
		(class $FullsizeAbsolute)
		(style (align = "center|middle"))
		(block
			(style
				(alpha = 1.8)
				(bind width "sizeShip.w")
				(bind height "sizeShip.h")
				(bind marginTop "	iSmall		? -20px :
									isMedium	? -10px
												: -50px")
				(bind backgroundImage "_imagePath")
				(backgroundSize = "contain")
			)
		)
	)
)

